---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import { ShoppingBag, ArrowUpRight, Zap, Box, Key, Sliders, Sparkles, Download, Layers } from 'lucide-react';
import '../styles/global.css';

const products = [
    {
        title: "Nebula UI Kit - Pro",
        price: "$89",
        category: "Complete Design System",
        image: "https://images.unsplash.com/photo-1581291518857-4e27b48ff24e?q=100&w=2500&auto=format&fit=crop",
        tag: "Bestseller",
        color: "indigo"
    },
    {
        title: "Quantum Admin Dashboard",
        price: "$129",
        category: "React + Tailwind Template",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=100&w=2500&auto=format&fit=crop",
        tag: "Updated",
        color: "emerald"
    },
    {
        title: "Flux Icon Family",
        price: "$49",
        category: "2,000+ Vector Icons",
        image: "https://images.unsplash.com/photo-1611162617474-5b21e879e113?q=100&w=2500&auto=format&fit=crop",
        color: "purple"
    },
    {
        title: "Orbit Wireframe System",
        price: "$59",
        category: "Figma Architecture Kit",
        image: "https://images.unsplash.com/photo-1507238692062-5420eb18f0ee?q=100&w=2500&auto=format&fit=crop",
        color: "pink"
    },
    {
        title: "Aether 3D Assets",
        price: "$149",
        category: "Blender & Spline Models",
        image: "https://images.unsplash.com/photo-1620641788421-7a1c342ea42e?q=100&w=2500&auto=format&fit=crop",
        tag: "New",
        color: "orange"
    },
    {
        title: "Nexus Landing Pages",
        price: "$69",
        category: "High-Conv Conversion Templates",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=100&w=2500&auto=format&fit=crop",
        color: "blue"
    }
];
---

<Layout title="Marketplace | SynVoke Studio">
    <Navbar client:load />
    
    <main class="min-h-screen bg-slate-50 selection:bg-indigo-100 font-sans pb-32">
        {/* Abstract Background Elements */}
        <div class="absolute top-0 right-0 w-[800px] h-[600px] bg-indigo-50 rounded-full blur-[150px] pointer-events-none" />
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#00000004_1px,transparent_1px),linear-gradient(to_bottom,#00000004_1px,transparent_1px)] bg-[size:3rem_3rem] pointer-events-none" />

        <div class="pt-40 pb-20 px-4 container mx-auto relative z-10 max-w-7xl">
            <div class="text-center max-w-4xl mx-auto mb-20 space-y-6">
                <span class="inline-flex items-center gap-2 text-indigo-600 font-bold tracking-widest text-[10px] uppercase bg-white border border-indigo-100 px-4 py-2 rounded-full shadow-sm mb-4">
                    <Sparkles class="w-3.5 h-3.5" /> Premium Digital Assets
                </span>
                <h1 class="text-6xl md:text-8xl font-display font-bold text-gray-950 tracking-tighter leading-[0.95]">
                    Creator's <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">Arsenal.</span>
                </h1>
                <p class="text-xl md:text-2xl text-gray-500 font-light leading-relaxed max-w-2xl mx-auto mt-6">
                    A strictly curated collection of extremely high-end UI kits, architectures, and templates crafted by our internal engineers.
                </p>
            </div>

            {/* Feature Grid */}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-32">
                <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 hover:border-indigo-100 transition-all duration-300">
                    <div class="w-12 h-12 bg-indigo-50 text-indigo-600 rounded-xl flex items-center justify-center mb-6">
                        <Box class="w-6 h-6" />
                    </div>
                    <h3 class="text-2xl font-bold font-display text-gray-900 mb-2">Drag & Drop Ready</h3>
                    <p class="text-gray-500 font-light">Copy-paste perfectly accessible components directly into your application architecture.</p>
                </div>
                <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 hover:border-purple-100 transition-all duration-300">
                    <div class="w-12 h-12 bg-purple-50 text-purple-600 rounded-xl flex items-center justify-center mb-6">
                        <Download class="w-6 h-6" />
                    </div>
                    <h3 class="text-2xl font-bold font-display text-gray-900 mb-2">Lifetime Access</h3>
                    <p class="text-gray-500 font-light">Secure absolute ownership. Pay once, use forever across unlimited commercial products.</p>
                </div>
                <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 hover:border-pink-100 transition-all duration-300">
                    <div class="w-12 h-12 bg-pink-50 text-pink-600 rounded-xl flex items-center justify-center mb-6">
                        <Layers class="w-6 h-6" />
                    </div>
                    <h3 class="text-2xl font-bold font-display text-gray-900 mb-2">Deep Customization</h3>
                    <p class="text-gray-500 font-light">Built with raw, un-opinionated standard CSS/Tailwind allowing you to mold the systems completely.</p>
                </div>
            </div>

            {/* Products Grid */}
            <div class="flex items-center justify-between border-b border-gray-200 pb-6 mb-12">
                 <h2 class="text-3xl font-display font-bold text-gray-900">Featured Kits</h2>
                 <div class="flex gap-4">
                     <span class="text-sm font-bold tracking-widest uppercase text-gray-400">Showing {products.length} Items</span>
                 </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {products.map((product) => (
                    <div class="group cursor-pointer">
                        <div class="relative overflow-hidden rounded-[2rem] aspect-[4/3] mb-6 bg-gray-100 shadow-sm group-hover:shadow-2xl transition-all duration-500 border border-gray-200 group-hover:border-indigo-200">
                            <img 
                                src={product.image} 
                                alt={product.title} 
                                class="object-cover w-full h-full transform group-hover:scale-110 transition-transform duration-1000 ease-[cubic-bezier(0.16,1,0.3,1)]"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/60 via-gray-900/0 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            
                            {/* Tags */}
                            {product.tag && (
                                <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-md text-gray-900 text-[10px] font-bold tracking-widest uppercase px-3 py-1.5 rounded-full shadow-lg">
                                    {product.tag}
                                </div>
                            )}

                            <button class="absolute bottom-6 left-6 right-6 bg-white text-gray-900 py-4 rounded-xl font-bold shadow-[0_20px_40px_rgba(0,0,0,0.2)] opacity-0 translate-y-8 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-[cubic-bezier(0.16,1,0.3,1)] flex items-center justify-center gap-2 hover:bg-indigo-50">
                                View Details <ArrowUpRight className="w-4 h-4 text-indigo-600" />
                            </button>
                        </div>
                        
                        <div class="pl-2">
                            <div class="flex justify-between items-start mb-2">
                                <p class={`text-${product.color}-600 font-mono text-[10px] uppercase font-bold tracking-widest`}>{product.category}</p>
                                <span class="text-lg font-bold text-gray-900">
                                    {product.price}
                                </span>
                            </div>
                            <h3 class="text-2xl font-display font-bold text-gray-900 group-hover:text-indigo-600 transition-colors">
                                {product.title}
                            </h3>
                        </div>
                    </div>
                ))}
            </div>
            
        </div>
    </main>
</Layout>
