---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import { ArrowRight, Quote } from 'lucide-react';

const testimonials = [
    {
        name: "David Kim",
        role: "CEO, StellarTech",
        quote: "SynVoke Studio didn't just redesign our website; they transformed our entire brand. The attention to detail and innovative approach is unmatched.",
        image: "https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=2070&auto=format&fit=crop"
    },
    {
        name: "Sarah Jenkins",
        role: "CMO, BrightVision",
        quote: "Working with this team was a masterclass in collaboration. They understood our vision perfectly and delivered beyond our expectations.",
        image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=1974&auto=format&fit=crop"
    },
    {
        name: "Michael Chen",
        role: "Product Lead, Flow",
        quote: "The best design decision we made was hiring SynVoke Studio. Our user engagement increased by 200% after the redesign.",
        image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=1974&auto=format&fit=crop"
    }
];

---

<Layout title="Stories | SynVoke Studio">
    <Navbar client:load />  
    
    <main class="pt-32 pb-24 px-4 container mx-auto">
        <div class="text-center max-w-2xl mx-auto mb-20 space-y-6">
            <h1 class="text-5xl md:text-7xl font-display font-bold text-gray-900 tracking-tight">
                Client <span class="text-indigo-600">Stories</span>
            </h1>
            <p class="text-xl text-gray-500 leading-relaxed max-w-2xl mx-auto">
                Real results from partnerships with forward-thinking companies.
            </p>
        </div>

        <div class="grid grid-cols-1 gap-12 lg:gap-16">
            {testimonials.map((testimonial, index) => (
                <div class={`flex flex-col md:flex-row gap-8 lg:gap-16 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''} bg-white p-8 md:p-12 rounded-3xl shadow-lg hover:shadow-2xl transition-shadow border border-gray-100`}>
                    <div class="w-full md:w-1/3 relative text-center md:text-left">
                        <div class="w-32 h-32 md:w-48 md:h-48 rounded-full overflow-hidden mx-auto md:mx-0 border-4 border-indigo-100 mb-6">
                            <img 
                                src={testimonial.image} 
                                alt={testimonial.name} 
                                class="object-cover w-full h-full"
                            />
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-1">{testimonial.name}</h3>
                        <p class="text-indigo-600 font-medium tracking-wide text-sm uppercase">{testimonial.role}</p>
                    </div>
                    
                    <div class="w-full md:w-2/3 space-y-6 text-center md:text-left">
                        <Quote className="w-12 h-12 text-indigo-200 mx-auto md:mx-0" />
                        <blockquote class="text-2xl md:text-3xl font-light text-gray-700 italic leading-relaxed">
                            "{testimonial.quote}"
                        </blockquote>
                        <a href="#" class="inline-flex items-center gap-2 text-indigo-600 font-bold hover:text-indigo-800 transition-colors group">
                            Read Case Study <ArrowRight className="w-4 h-4 group-hover:translate-x-1 transition-transform" />
                        </a>
                    </div>
                </div>
            ))}
        </div>
        
        {/* Animated Stats Section */}
        <div class="mt-32 grid grid-cols-2 md:grid-cols-4 gap-8 text-center border-t border-gray-100 pt-16">
            <div>
                <span class="block text-4xl md:text-6xl font-bold text-gray-900 mb-2">50+</span>
                <span class="text-gray-500 uppercase tracking-widest text-sm font-medium">Projects Delivered</span>
            </div>
             <div>
                <span class="block text-4xl md:text-6xl font-bold text-gray-900 mb-2">98%</span>
                <span class="text-gray-500 uppercase tracking-widest text-sm font-medium">Client Retention</span>
            </div>
             <div>
                <span class="block text-4xl md:text-6xl font-bold text-gray-900 mb-2">12</span>
                <span class="text-gray-500 uppercase tracking-widest text-sm font-medium">Design Awards</span>
            </div>
             <div>
                <span class="block text-4xl md:text-6xl font-bold text-gray-900 mb-2">5</span>
                <span class="text-gray-500 uppercase tracking-widest text-sm font-medium">Years Active</span>
            </div>
        </div>
    </main>
</Layout>
