---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import { Calendar, User, ArrowRight } from 'lucide-react';

const posts = [
    {
        title: "The Future of Design Systems in 2026",
        excerpt: "Exploring the evolution of component libraries and how AI is changing the way we build interfaces.",
        author: "Alex Rivers",
        date: "Feb 18, 2026",
        image: "https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=2070&auto=format&fit=crop"
    },
    {
        title: "Mastering Framer Motion for React",
        excerpt: "A deep dive into creating fluid gestures and complex layout animations with minimal code.",
        author: "Sarah Jen",
        date: "Feb 15, 2026",
        image: "https://images.unsplash.com/photo-1633356122544-f134324a6cee?q=80&w=2070&auto=format&fit=crop"
    },
    {
        title: "Why Color Theory Matters in UI",
        excerpt: "Understanding psychological impact of colors and how to build accessible palettes.",
        author: "Mike Chen",
        date: "Feb 10, 2026",
        image: "https://images.unsplash.com/photo-1502691876148-a84978e59af8?q=80&w=2070&auto=format&fit=crop"
    }
];
---

<Layout title="Blog | Syntax Studio">
    <Navbar client:load />  
    
    <main class="pt-32 pb-24 px-4 container mx-auto">
        <div class="text-center max-w-2xl mx-auto mb-20">
            <span class="text-indigo-600 font-bold tracking-wider text-sm uppercase mb-4 block">Our Thoughts</span>
            <h1 class="text-5xl md:text-7xl font-display font-bold text-gray-900 tracking-tight mb-6">
                Insights & <br/> <span class="text-indigo-600">Perspectives</span>
            </h1>
            <p class="text-xl text-gray-500 leading-relaxed">
                Deep dives into design, development, and the future of digital products.
            </p>
        </div>

        <div class="space-y-16">
            {posts.map((post, index) => (
                <article class="group flex flex-col md:flex-row gap-8 md:gap-12 items-center border-b border-gray-100 pb-16 last:border-0">
                    <div class="w-full md:w-1/2 overflow-hidden rounded-2xl shadow-lg relative aspect-[16/10]">
                        <img 
                            src={post.image} 
                            alt={post.title} 
                            class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-700 ease-out"
                        />
                        <div class="absolute inset-0 bg-indigo-900/10 group-hover:bg-indigo-900/0 transition-colors duration-500"></div>
                    </div>
                    
                    <div class="w-full md:w-1/2 flex flex-col justify-center space-y-4">
                        <div class="flex items-center gap-4 text-sm text-gray-400 font-medium uppercase tracking-wider">
                            <span class="flex items-center gap-1"><Calendar className="w-4 h-4" /> {post.date}</span>
                            <span class="flex items-center gap-1"><User className="w-4 h-4" /> {post.author}</span>
                        </div>
                        
                        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 group-hover:text-indigo-600 transition-colors leading-tight cursor-pointer">
                            {post.title}
                        </h2>
                        
                        <p class="text-gray-500 text-lg leading-relaxed line-clamp-3">
                            {post.excerpt}
                        </p>
                        
                        <a href="#" class="inline-flex items-center gap-2 text-indigo-600 font-bold hover:gap-3 transition-all mt-4">
                            Read Article <ArrowRight className="w-4 h-4" />
                        </a>
                    </div>
                </article>
            ))}
        </div>
    </main>
</Layout>
