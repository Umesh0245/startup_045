---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import { Calendar, User, ArrowRight, BookOpen, Clock } from 'lucide-react';
import '../styles/global.css';

const posts = [
    {
        slug: "future-of-design-systems-2026",
        title: "The Future of Design Systems in 2026",
        excerpt: "Exploring the evolution of component libraries and how AI is fundamentally changing the way we establish and maintain enterprise interfaces.",
        author: "Alex Rivers",
        date: "Feb 18, 2026",
        readTime: "8 min read",
        category: "Design Architecture",
        image: "https://images.unsplash.com/photo-1618761714954-0b8cd0026356?q=100&w=2500&auto=format&fit=crop"
    },
    {
        slug: "mastering-framer-motion",
        title: "Mastering Framer Motion for React",
        excerpt: "A deep dive into creating fluid gestures, layout animations, and complex orchestrated sequences with minimal code overhead.",
        author: "Sarah Jen",
        date: "Feb 15, 2026",
        readTime: "12 min read",
        category: "Frontend Engineering",
        image: "https://images.unsplash.com/photo-1550439062-609e1531270e?q=100&w=2500&auto=format&fit=crop"
    },
    {
        slug: "color-theory-in-ui",
        title: "Why Color Theory Dictates UI Success",
        excerpt: "Understanding the psychological impact of colors, maintaining mathematical harmony, and correctly building accessible HSL palettes.",
        author: "Mike Chen",
        date: "Feb 10, 2026",
        readTime: "6 min read",
        category: "UI Strategy",
        image: "https://images.unsplash.com/photo-1557683316-973673baf926?q=100&w=2500&auto=format&fit=crop"
    },
    {
        slug: "rust-vs-go-microservices",
        title: "Rust vs Go for Microservice Edge Architectures",
        excerpt: "An extremely detailed performance benchmark evaluating memory safety, deployment speed, and pure transaction throughput.",
        author: "Elias Vance",
        date: "Jan 28, 2026",
        readTime: "15 min read",
        category: "Backend Systems",
        image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?q=100&w=2500&auto=format&fit=crop"
    }
];
---

<Layout title="Insights | SynForge">
    <Navbar client:load />  
    
    <main class="min-h-screen bg-white font-sans pb-32">
        {/* Modern Top Hero Gradient */}
        <div class="w-full h-[500px] bg-gradient-to-b from-slate-50 to-white absolute top-0 z-0"></div>

        <div class="pt-40 pb-16 px-4 container mx-auto relative z-10 max-w-6xl">
            <div class="text-center max-w-3xl mx-auto mb-24">
                <span class="inline-flex items-center gap-2 text-indigo-600 font-bold tracking-widest text-[10px] border border-indigo-100 bg-white px-4 py-1.5 rounded-full uppercase mb-6 shadow-sm">
                    <BookOpen class="w-3.5 h-3.5" /> Editorial Perspectives
                </span>
                <h1 class="text-6xl md:text-8xl font-display font-bold text-gray-950 tracking-tighter leading-[0.9] mb-8">
                    SynForge <span class="italic text-gray-400">Journal.</span>
                </h1>
                <p class="text-xl md:text-2xl text-gray-500 font-light leading-relaxed">
                    Extremely deep dives into architectural engineering, profound design philosophy, and the absolute future of digital products.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-20">
                {posts.map((post, index) => (
                    <a href={`/blog/${post.slug}`} class="group flex flex-col items-start cursor-pointer">
                        <div class="w-full overflow-hidden rounded-[2rem] shadow-md group-hover:shadow-2xl transition-all duration-500 relative aspect-[4/3] mb-8 border border-gray-100 group-hover:border-indigo-100">
                            <img 
                                src={post.image} 
                                alt={post.title} 
                                class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-1000 ease-[cubic-bezier(0.16,1,0.3,1)]"
                            />
                            {/* Inner Hover Gradient */}
                            <div class="absolute inset-0 bg-indigo-900/0 group-hover:bg-indigo-900/10 transition-colors duration-500"></div>
                            
                            <div class="absolute top-6 right-6 bg-white/90 backdrop-blur-md text-gray-900 text-[10px] font-bold tracking-widest uppercase px-4 py-2 rounded-full shadow-sm flex items-center gap-2">
                                <Clock class="w-3 h-3 text-indigo-500" /> {post.readTime}
                            </div>
                        </div>
                        
                        <div class="w-full pl-2">
                            <div class="flex items-center gap-4 text-xs text-indigo-600 font-bold uppercase tracking-widest mb-4">
                                <span>{post.category}</span>
                                <div class="w-1 h-1 rounded-full bg-gray-300"></div>
                                <span class="text-gray-400 flex flex-row items-center gap-1.5"><Calendar class="w-3 h-3" /> {post.date}</span>
                            </div>
                            
                            <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 group-hover:text-indigo-600 transition-colors leading-[1.1] mb-4">
                                {post.title}
                            </h2>
                            
                            <p class="text-gray-500 text-lg leading-relaxed font-light mb-6">
                                {post.excerpt}
                            </p>
                            
                            <div class="inline-flex items-center gap-3 text-gray-900 font-bold uppercase tracking-widest text-xs group-hover:text-indigo-600 transition-colors border-b-2 border-transparent group-hover:border-indigo-600 pb-1">
                                Read Article <ArrowRight class="w-4 h-4" />
                            </div>
                        </div>
                    </a>
                ))}
            </div>
            
            <div class="mt-32 text-center">
                <button class="bg-gray-900 text-white px-10 py-5 rounded-full font-bold uppercase tracking-widest hover:bg-indigo-600 transition-colors text-sm shadow-xl">
                    Load More Articles
                </button>
            </div>
        </div>
    </main>
</Layout>
